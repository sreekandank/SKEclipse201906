<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">  
  
<bean id="answer1" class="com.sk.spring.DependencyInjection.Answer3">  
<property name="id" value="1"></property>  
<property name="answer" value="Java is a Programming Language"></property>  
<property name="postedDate" value="12/12/2001"></property>  
</bean>  
<bean id="answer2" class="com.sk.spring.DependencyInjection.Answer3">  
<property name="id" value="2"></property>  
<property name="answer" value="Java is a Platform"></property>  
<property name="postedDate" value="12/12/2003"></property>  
</bean>  
  
<bean id="user1" class="com.sk.spring.DependencyInjection.User">  
<property name="id" value="1"></property>  
<property name="name" value="Sreekandan K"></property>  
<property name="email" value="sreekandank@gmail.com"></property>  
</bean>  
<bean id="user2" class="com.sk.spring.DependencyInjection.User">  
<property name="id" value="2"></property>  
<property name="name" value="SK"></property>  
<property name="email" value="sk@gmail.com"></property>  
</bean>  
  
<bean id="quest" class="com.sk.spring.DependencyInjection.Question7">  
<property name="id" value="1"></property>  
<property name="name" value="What is Java?"></property>  
<property name="answers">  
<map>  
<entry key-ref="answer1" value-ref="user1"></entry>  
<entry key-ref="answer2" value-ref="user2"></entry>  
</map>  
</property>  
</bean>
  
</beans>  
